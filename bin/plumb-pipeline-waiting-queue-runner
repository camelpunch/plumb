#!/usr/bin/env ruby

require_relative '../lib/plumb/queue'
require_relative '../lib/plumb/queue_runner'

module Plumb
  module WaitingQueueRunner
    class << self
      def call
        waiting = Queue.new('pipeline-waiting-queue')
        immediate = Queue.new('pipeline-immediate-queue')
        runner = QueueRunner.new(
          waiting,
          ->{ sleep 1 }
        )

        waiting.clear
        immediate.clear

        loop do
          runner.run do |job|
            puts "popped from waiting"
            immediate << job
          end
        end
      end
    end
  end
end
Plumb::WaitingQueueRunner.call
